
{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-header-title">
            {{ 'Appointment List'|trans({}, 'Modules.Dimsymfony.Admin') }}
          </h3>
        </div>
        <div class="card-body">
          {% if appointments is empty %}
            <div class="alert alert-info">
              {{ 'No appointments found.'|trans({}, 'Modules.Dimsymfony.Admin') }}
            </div>
          {% else %}
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>{{ 'ID'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'Name'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'City'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'Phone'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'Time Slots'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'Created'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'Visited'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                    <th>{{ 'Actions'|trans({}, 'Modules.Dimsymfony.Admin') }}</th>
                  </tr>
                </thead>
                <tbody>
                  {% for appointment in appointments %}
                    <tr>
                      <td>{{ appointment.id_dim_rdv }}</td>
                      <td>{{ appointment.firstname }} {{ appointment.lastname }}</td>
                      <td>{{ appointment.city }} ({{ appointment.postal_code }})</td>
                      <td>{{ appointment.phone }}</td>
                      <td>
                        <div>{{ appointment.date_creneau1 }}</div>
                        <div>{{ appointment.date_creneau2 }}</div>
                      </td>
                      <td>{{ appointment.created_at|date('Y-m-d H:i') }}</td>
                      <td>
                        {% if appointment.visited %}
                          <span class="badge badge-success">{{ 'Yes'|trans({}, 'Modules.Dimsymfony.Admin') }}</span>
                        {% else %}
                          <span class="badge badge-danger">{{ 'No'|trans({}, 'Modules.Dimsymfony.Admin') }}</span>
                        {% endif %}
                      </td>
                      <td>
                        <div class="btn-group">
                          <a href="{{ path('admin_dimsymphony_gestionrdv_view', {'id': appointment.id_dim_rdv}) }}" class="btn btn-sm btn-outline-secondary">
                            <i class="material-icons">visibility</i>
                            {{ 'View'|trans({}, 'Modules.Dimsymfony.Admin') }}
                          </a>
                          
                          <a href="{{ path('admin_dimsymphony_gestionrdv_map', {'id': appointment.id_dim_rdv}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="material-icons">map</i>
                            {{ 'Map'|trans({}, 'Modules.Dimsymfony.Admin') }}
                          </a>
                          
                          <form action="{{ path('admin_dimsymphony_gestionrdv_toggle_visited', {'id': appointment.id_dim_rdv}) }}" method="post" class="d-inline">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('toggle-visited-' ~ appointment.id_dim_rdv) }}">
                            <button type="submit" class="btn btn-sm btn-outline-warning">
                              <i class="material-icons">{{ appointment.visited ? 'cancel' : 'check_circle' }}</i>
                              {{ appointment.visited ? 'Mark as not visited'|trans({}, 'Modules.Dimsymfony.Admin') : 'Mark as visited'|trans({}, 'Modules.Dimsymfony.Admin') }}
                            </button>
                          </form>
                          
                          <form action="{{ path('admin_dimsymphony_gestionrdv_delete', {'id': appointment.id_dim_rdv}) }}" method="post" class="d-inline" onsubmit="return confirm('{{ 'Are you sure you want to delete this appointment?'|trans({}, 'Modules.Dimsymfony.Admin') }}')">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-appointment-' ~ appointment.id_dim_rdv) }}">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                              <i class="material-icons">delete</i>
                              {{ 'Delete'|trans({}, 'Modules.Dimsymfony.Admin') }}
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
