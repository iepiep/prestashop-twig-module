
{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-header-title">
            {{ 'Appointment Details'|trans({}, 'Modules.Dimsymfony.Admin') }}
          </h3>
          <div class="card-header-actions">
            <a href="{{ path('admin_dimsymphony_gestionrdv_index') }}" class="btn btn-outline-secondary">
              <i class="material-icons">arrow_back</i>
              {{ 'Back to list'|trans({}, 'Modules.Dimsymfony.Admin') }}
            </a>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h4>{{ 'Customer Information'|trans({}, 'Modules.Dimsymfony.Admin') }}</h4>
                </div>
                <div class="card-body">
                  <dl class="row">
                    <dt class="col-sm-4">{{ 'Name'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-8">{{ appointment.firstname }} {{ appointment.lastname }}</dd>
                    
                    <dt class="col-sm-4">{{ 'Email'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-8">{{ appointment.email }}</dd>
                    
                    <dt class="col-sm-4">{{ 'Phone'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-8">{{ appointment.phone }}</dd>
                  </dl>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="card">
                <div class="card-header">
                  <h4>{{ 'Address Information'|trans({}, 'Modules.Dimsymfony.Admin') }}</h4>
                </div>
                <div class="card-body">
                  <dl class="row">
                    <dt class="col-sm-4">{{ 'Address'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-8">{{ appointment.address }}</dd>
                    
                    <dt class="col-sm-4">{{ 'Postal Code'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-8">{{ appointment.postal_code }}</dd>
                    
                    <dt class="col-sm-4">{{ 'City'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-8">{{ appointment.city }}</dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row mt-3">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <h4>{{ 'Appointment Information'|trans({}, 'Modules.Dimsymfony.Admin') }}</h4>
                </div>
                <div class="card-body">
                  <dl class="row">
                    <dt class="col-sm-3">{{ 'Time Slot 1'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-9">{{ appointment.date_creneau1 }}</dd>
                    
                    <dt class="col-sm-3">{{ 'Time Slot 2'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-9">{{ appointment.date_creneau2 }}</dd>
                    
                    <dt class="col-sm-3">{{ 'Created At'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-9">{{ appointment.created_at|date('Y-m-d H:i:s') }}</dd>
                    
                    <dt class="col-sm-3">{{ 'Visited'|trans({}, 'Modules.Dimsymfony.Admin') }}</dt>
                    <dd class="col-sm-9">
                      {% if appointment.visited %}
                        <span class="badge badge-success">{{ 'Yes'|trans({}, 'Modules.Dimsymfony.Admin') }}</span>
                      {% else %}
                        <span class="badge badge-danger">{{ 'No'|trans({}, 'Modules.Dimsymfony.Admin') }}</span>
                      {% endif %}
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row mt-3">
            <div class="col-md-12">
              <div class="btn-group">
                <a href="{{ path('admin_dimsymphony_gestionrdv_map', {'id': appointment.id_dim_rdv}) }}" class="btn btn-primary">
                  <i class="material-icons">map</i>
                  {{ 'View Map'|trans({}, 'Modules.Dimsymfony.Admin') }}
                </a>
                
                <form action="{{ path('admin_dimsymphony_gestionrdv_toggle_visited', {'id': appointment.id_dim_rdv}) }}" method="post" class="d-inline">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('toggle-visited-' ~ appointment.id_dim_rdv) }}">
                  <button type="submit" class="btn btn-warning">
                    <i class="material-icons">{{ appointment.visited ? 'cancel' : 'check_circle' }}</i>
                    {{ appointment.visited ? 'Mark as not visited'|trans({}, 'Modules.Dimsymfony.Admin') : 'Mark as visited'|trans({}, 'Modules.Dimsymfony.Admin') }}
                  </button>
                </form>
                
                <form action="{{ path('admin_dimsymphony_gestionrdv_delete', {'id': appointment.id_dim_rdv}) }}" method="post" class="d-inline" onsubmit="return confirm('{{ 'Are you sure you want to delete this appointment?'|trans({}, 'Modules.Dimsymfony.Admin') }}')">
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-appointment-' ~ appointment.id_dim_rdv) }}">
                  <button type="submit" class="btn btn-danger">
                    <i class="material-icons">delete</i>
                    {{ 'Delete'|trans({}, 'Modules.Dimsymfony.Admin') }}
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
